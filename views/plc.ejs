		</div>
		<!-- //버튼 -->
		<!-- 테이블 -->
		<div class="table_wrap">
			<div class="inner_wrap">
				<div class="scroll">
					<form method="get" action="">
                        <legend>PLC 관리 리스트 폼</legend>
					    <fieldset>
					        <table summary="" class="tb_style_01">
					            <caption></caption>
					            <colgroup>
					                <col style="width:5%;" />
					                <col style="width:10%;" />
					                <col style="width:10%;" />
					                <col style="width:20%;" />
					                <col style="width:10%;" />
					                <col style="width:15;" />
					                <col style="width:10%;" />
					                <col style="width:auto" />
					            </colgroup>
					            <thead>
					                <tr>
					                    <th scope="col"><input type="checkbox" name="" value=""></th>
					                    <th scope="col">PLC</th>
					                    <th scope="col">국번</th>
					                    <th scope="col">IP</th>
					                    <th scope="col">Port</th>
					                    <th scope="col">Payload</th>
					                    <th scope="col">Bit/Word</th>
					                    <th scope="col">Protocol</th>
					                </tr>
									<% for(var i=0; i<rows.length; i++) { var row=rows[i]; %>
										<tr>
											<td><input type="checkbox" name="row[]" id="" value="%=row"></td>
											<td><%= row.PLC%></td>
											<td><%= row.국번%></td>
											<td><%= row.IP%></td>
											<td><%= row.PORT%></td>
											<td><%= row.Payload%></td>
											<td><%= row.Bit_word%></td>
											<td><%= row.Protocol%></td>
										</tr>
									<% } %>
					            </thead>
					        </table>
					    </fieldset>
					</form>
				</div>
				<div class="pagination">
					<ul>
						<li class="pg-btn"><a href="#"><img src="images/icon_first.gif" alt="처음 페이지로"></a></li>
						<li class="pg-btn"><a href="#"><img src="images/icon_prev.gif" alt="이전 페이지로"></a></li>
						<li class="active"><a href="#">1</a></li>
						<li><a href="#">2</a></li>
						<li><a href="#">3</a></li>
						<li><a href="#">4</a></li>
