						<li><a href="#">10</a></li>
						<li class="pg-btn"><a href="#"><img src="images/icon_next.gif" alt="다음 페이지로"></a></li>
						<li class="pg-btn"><a href="#"><img src="images/icon_last.gif" alt="마지막 페이지로"></a></li>
					</ul>
				</div>
			</div>
		</div>
		<!-- //테이블 -->
	</section>
	
</div>
<%- include('./partials/footer') %>

