<!DOCTYPE html>
<html lang="ko">

<head>
    <%- include('./partials/head') %>
</head>

<body>
    <div id="wrap">
        <header>
            <%- include('./partials/nav') %>
                <!-- //주메뉴 -->
        </header>
        <section>
            <div class="inner_wrap">
                <div class="cont_title_wrap">
                    <h3>설비&middot;센서 관리</h3>
                    <p><span class="location_home">홈</span><span
                            class="location_arrow">설비&middot;센서</span><span>설비&middot;센서 관리</span></p>
                </div>
            </div>
            <!-- 버튼 -->
            <div class="btn_area">
                <div class="inner_wrap">
                    <a href="#popup1" rel="modal:open" class="btn_dark_blue">등록</a>
                    <a href="#popup1" rel="modal:open" class="btn_blue">수정</a>
                    <a href="#" class="btn_dark_gray">삭제</a>
                </div>
            </div>
            <!-- //버튼 -->
            <!-- 테이블 -->
            <div class="table_wrap">
                <div class="inner_wrap">
                    <div class="scroll">
                        <form method="GET" action="/equipment_sensor">
                            <legend>설비&middot;센서 리스트 폼</legend>
                            <fieldset>
                                <table summary="" class="tb_style_01">
                                    <caption></caption>
                                    <colgroup>
                                        <col style="width:5%;" />
                                        <col style="width:25%;" />
                                        <col style="width:auto;" />
                                        <col style="width:15%;" />
                                        <col style="width:15%;" />
                                    </colgroup>
                                    <thead>
                                        <tr>
                                            <th scope="col"><input type="checkbox" name="" id=""></th>
                                            <th scope="col">설비</th>
                                            <th scope="col">센서</th>
                                            <th scope="col">기간</th>
                                            <th scope="col">사용여부</th>
                                        </tr>
                                        <% for(var i=0; i<rows.length; i++) { 
                                            var row = rows[i];
                                        %>
                                        <tr>
                                            <td><input type="checkbox" name="" id=""></td>
                                            <td><%= row.equipment_name%></td>
                                            <td><%= row.sensor%></td>
                                            <td><%= row.equipment_date%></td>
                                            <td><%= row.equipment_use%></td>
                                        </tr>
                                    <% } %>
                                    </thead>
                                </table>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <!-- //테이블 -->
        </section>

    </div>
    <footer>
        <div class="inner_wrap">
            <p>Copyright (c) 2021 all Rights reserved. PLC Program</p>
        </div>
    </footer>

    <!-- popup content -->
    <!--설비&middot;센서 등록 팝업-->
    <div class="modal" id="popup1" style="display:none;">
        <h3>설비&middot;센서 등록</h3>
        <div class="popup_cont">
            <form method="post" method= post action="/equipment_sensor">
                <legend>설비&middot;센서 등록 폼</legend>
                <fieldset>
                    <table summary="" class="tb_style_modify">
                        <caption>설비&middot;센서 등록</caption>
                        <colgroup>
                            <col style="width:15%" />
                            <col style="width:auto;" />
                        </colgroup>
                        <tbody>
                            <tr>
                                <th scope="row"><label for="">설비 이름</label></th>
                                <td><input type="text" name="equipment_name" id="equipment_name" value="" placeholder="설비 이름"
                                        class="text half_wd" /></td>
                            </tr>
                            <tr>
                                <th scope="row"><label for="">상세 설명</label></th>
                                <td><textarea name="equipment_comment" id="equipment_comment" rows="10" class="text full_wd"></textarea></td>
                            </tr>
                            <tr>
                                <th scope="row"><label for="">센서 등록</label></th>
                                <td>
                                    <div class="column_wrap">
                                        <p class="column_margin">
                                            <input type="text" name="sensor_name" id="sensor_name" value="" placeholder="센서이름"
                                                class="text middle_wd" />
                                            <input type="text" name="sensor_value" id="sensor_value" value="" placeholder="값"
                                                class="text middle_wd" />
                                            <input type="text" name="sensor_measure" id="sensor_measure" value="" placeholder="단위"
                                                class="text middle_wd" />
                                            <a href="#" class="btn_add"><i class="fas fa-plus-square"></i></a>
                                            <a href="#" class="btn_del"><i class="fas fa-minus-square"></i></a>
                                        </p>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row"><label for="">위치(GPS)</label></th>
                                <td>
                                    <div class="column_wrap">
                                        <p class="column_margin">
                                            <input type="text" name="equipment_location_lat" id="equipment_location_lat" value="" placeholder="Lat"
                                                class="text middle_wd" />
                                            <input type="text" name="equipment_loaction_lng" id="equipment_loaction_lng" value="" placeholder="Lng"
                                                class="text middle_wd" />
                                        </p>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row"><label for="">권한 설정</label></th>
                                <td>
                                    <div class="column_wrap">
                                        <p class="column_margin">
                                            <input type="text" name="" id="" value="" placeholder="그룹명"
                                                class="text middle_wd" />
                                            <a href="#" class="btn_add"><i class="fas fa-plus-square"></i></a>
                                            <a href="#" class="btn_del"><i class="fas fa-minus-square"></i></a>
                                        </p>
                                        <p class="column_margin">
                                            <input type="text" name="" id="" value="" placeholder="그룹명"
                                                class="text middle_wd" />
                                        </p>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <input type ="submit" value="등록" class="btn_pop_blue">
                </fieldset>
            </form>
            <div class="pop_btn_area">
                
                <a href="#close-modal" rel="modal:close" class="btn_pop_gray">닫기</a>
            </div>
        </div>
        <a href="#close-modal" rel="modal:close" class="close-modal">Close</a>
    </div>
    <!--//설비&middot;센서 등록 팝업-->



    <!-- //popup content -->



</body>

</html>